/* Mobile Responsiveness */
@media (max-width: 768px) {
    /* Hide sidebar on mobile */
    .sidebar {
        display: none;
    }
    
    /* Full-width panels */
    .main {
        grid-template-columns: 1fr !important;
        padding: 0 !important;
    }
    
    /* Mobile header adjustments */
    .header-title {
        font-size: 14px;
    }
    
    .header-stat {
        font-size: 11px;
        padding: 4px 8px;
    }
    
    /* Stack stats grid */
    .stats-grid {
        grid-template-columns: 1fr !important;
        gap: 12px !important;
    }
    
    .stat-card {
        padding: 12px !important;
    }
    
    .stat-value {
        font-size: 22px;
    }
    
    /* Adjust dashboard grid */
    .dashboard-grid {
        grid-template-columns: 1fr !important;
        gap: 12px !important;
    }
    
    .card {
        padding: 12px !important;
    }
    
    /* Mobile menu button */
    .mobile-menu-btn {
        display: block;
        position: fixed;
        top: 12px;
        right: 12px;
        z-index: 9999;
        background: var(--bg-secondary);
        border: 1px solid var(--border-color);
        border-radius: var(--radius-md);
        padding: 8px 12px;
        cursor: pointer;
        color: var(--text-primary);
    }
    
    /* Mobile nav drawer */
    .mobile-nav-drawer {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.9);
        z-index: 9998;
        display: none;
        padding: 20px;
        overflow-y: auto;
    }
    
    .mobile-nav-drawer.active {
        display: block;
    }
    
    /* Adjust session cards */
    .session-grid {
        grid-template-columns: 1fr !important;
        gap: 8px !important;
    }
    
    /* Command palette mobile */
    .command-palette-content {
        width: 100% !important;
        max-width: 100%;
        height: auto;
        max-height: 70vh;
    }
}

@media (min-width: 769px) {
    .mobile-menu-btn {
        display: none;
    }
    
    .sidebar {
        display: flex;
    }
}
